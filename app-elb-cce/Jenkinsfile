pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acción sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM',
            defaultValue: true,
            description: 'Ejecutar Terraform'
        )
        booleanParam(
            name: 'RUN_HELM',
            defaultValue: false,
            description: 'Ejecutar Helm'
        )
        booleanParam(
            name: 'RUN_ANSIBLE',
            defaultValue: false,
            description: 'Ejecutar Ansible'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR   = 'app-elb-cce/terraform'
        HELM_DIR = 'app-elb-cce/helm/postgresql'
        ANS_DIR  = 'app-elb-cce/ansible'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            when {
                allOf {
                    expression { params.RUN_TERRAFORM }
                    expression { params.ACTION in ['deploy', 'destroy'] }
                }
            }
            steps {
                dir(env.TF_DIR) {
                sh '''
                    rm -rf .terraform
                    terraform init
                '''
                }
            }
        }

        stage('Terraform Plan') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform plan -var-file="local.tfvars"'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform apply -auto-approve -var-file="local.tfvars"'
                }
            }
        }

        stage('Helm Deploy PostgreSQL') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                dir(env.HELM_DIR) {
                    sh '''
                      helm upgrade postgresql . \
                        --namespace database \
                        --install \
                        --wait
                    '''
                }
            }
        }

        stage('Restore Database (Ansible)') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_ANSIBLE }
                }
            }
            steps {
                dir(env.ANS_DIR) {
                    ansiblePlaybook(
                        playbook: 'playbooks/restore_db.yml',
                        inventory: 'inventory/cce.yml',
                        colorized: true
                    )
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                allOf {
                    expression { params.ACTION == 'destroy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform destroy -auto-approve -var-file="local.tfvars"'
                }
            }
        }
    }

    post {
        success {
            echo "✔ Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "❌ Error en el pipeline"
        }
        always {
            steps {
                // Limpieza segura del workspace
                deleteDir()
            }
        }
    }
}
