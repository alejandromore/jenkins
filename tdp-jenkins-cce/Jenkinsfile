@Library('shared-lib') _

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acci√≥n sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform'
        )
        booleanParam(
            name: 'RUN_HELM',
            defaultValue: false,
            description: 'Desplegar Jenkins con Helm (cargar kubeconfig en secreto)'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR   = 'tdp-jenkins-cce/terraform'
        HELM_DIR = 'tdp-jenkins-cce/helm'
        REGION   = 'la-south-2'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // -----------------------------
        // Terraform: infraestructura
        // -----------------------------
        stage('Terraform Deploy') {
            when {
                expression { params.RUN_TERRAFORM }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: [
                            'cce_public_ip', 
                            'elb_public_ip', 
                            'elb_public_id'
                        ]
                    )
                }
            }
        }

        // -----------------------------
        // Create Kubernetes Secret for Jenkins
        // -----------------------------
        stage('Create Kubernetes Secret for Jenkins') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                script {

                    withCredentials([
                        file(credentialsId: 'cce-jenkins-kubeconfig', variable: 'KUBECONFIG'),
                        usernamePassword(
                            credentialsId: 'github-creds',
                            usernameVariable: 'GITHUB_USER',
                            passwordVariable: 'GITHUB_TOKEN'
                        ),
                        string(credentialsId: 'hwc-access-key', variable: 'HWC_ACCESS_KEY'),
                        string(credentialsId: 'hwc-secret-key', variable: 'HWC_SECRET_KEY'),
                    ]) {

                        sh """
                        set -eo pipefail
                        export KUBECONFIG=\$KUBECONFIG

                        # Valores fijos (solo laboratorio)
                        JENKINS_ADMIN_ID=admin
                        JENKINS_ADMIN_PASSWORD='ingE2004#'

                        echo "=========================================="
                        echo "Validando namespace jenkins..."
                        echo "=========================================="

                        kubectl create namespace jenkins \\
                        --dry-run=client -o yaml | kubectl apply --validate=false -f -

                        echo ""
                        echo "=========================================="
                        echo "Creando o actualizando secret jenkins-secrets..."
                        echo "=========================================="

                        kubectl create secret generic jenkins-secrets \\
                        -n jenkins \\
                        --from-literal=GITHUB_TOKEN=\$GITHUB_TOKEN \\
                        --from-literal=HWC_ACCESS_KEY=\$HWC_ACCESS_KEY \\
                        --from-literal=HWC_SECRET_KEY=\$HWC_SECRET_KEY \\
                        --from-literal=JENKINS_ADMIN_ID=\$JENKINS_ADMIN_ID \\
                        --from-literal=JENKINS_ADMIN_PASSWORD=\$JENKINS_ADMIN_PASSWORD \\
                        --from-literal=GITHUB_USER=\$GITHUB_USER \\
                        --dry-run=client -o yaml | kubectl apply --validate=false-f -

                        echo ""
                        echo "Secret aplicado correctamente en namespace jenkins."
                        """
                    }
                }
            }
        }


        // -----------------------------
        // Helm Deploy
        // -----------------------------
        stage('Helm Deploy Jenkins') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                script {

                    env.elb_public_id = readFile("${WORKSPACE}/elb_public_id.txt").trim()
                    env.elb_public_ip = readFile("${WORKSPACE}/elb_public_ip.txt").trim()

                    helmDeployJenkins(
                        dir: env.HELM_DIR,
                        chartDir: 'jenkins',
                        kubeconfigCred: 'cce-jenkins-kubeconfig',
                        elbId: env.elb_public_id,
                        elbIp: env.elb_public_ip,
                        releaseName: 'jenkins',
                        namespace: 'jenkins',
                        healthEndpoint: '/login',
                        timeoutSeconds: 300
                    )
                }
            }
        }


    }

    post {
        success {
            echo "Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "Error en el pipeline"
        }
    }
}
