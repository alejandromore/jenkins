@Library('shared-lib') _

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acci√≥n sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform'
        )
        booleanParam(
            name: 'RUN_HELM_SETUP',
            defaultValue: false,
            description: 'Desplegar Jenkins con Helm (cargar kubeconfig en secreto)'
        )
        booleanParam(
            name: 'RUN_HELM_APP',
            defaultValue: false,
            description: 'Desplegar Jenkins con Helm (cargar kubeconfig en secreto)'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR   = 'tdp-jenkins-cce/terraform'
        HELM_DIR = 'tdp-jenkins-cce/helm'
        REGION   = 'la-south-2'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // -----------------------------
        // Terraform: infraestructura
        // -----------------------------
        stage('Terraform Deploy') {
            when {
                expression { params.RUN_TERRAFORM }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: [
                            'cce_public_ip', 
                            'elb_public_ip', 
                            'elb_public_id',
                            'sfs_jenkins_id',
                            'sfs_turbo_shared_path',
                            'enterprise_project_id'
                        ]
                    )
                }
            }
        }

        // -----------------------------
        // Helm Set Up Cluster
        // -----------------------------
        stage('Helm Set Up Cluster') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM_SETUP }
                }
            }
            steps {
                script {

                    env.sfs_jenkins_id = readFile("${WORKSPACE}/sfs_jenkins_id.txt").trim()
                    env.sfs_turbo_shared_path = readFile("${WORKSPACE}/sfs_turbo_shared_path.txt").trim()
                    env.enterprise_project_id = readFile("${WORKSPACE}/enterprise_project_id.txt").trim()

                    helmSetupCluster(
                        dir: env.HELM_DIR,
                        chartDir: 'cce-setup',
                        kubeconfigCred: 'cce-jenkins-kubeconfig',
                        sfsId: env.sfs_jenkins_id,
                        sfs_turbo_shared_path: env.sfs_turbo_shared_path,
                        enterpriseProjectId: env.enterprise_project_id,
                        releaseName: 'infra',
                        namespace: 'infra',
                    )
                }
            }
        }

        // -----------------------------
        // Helm Deploy
        // -----------------------------
        stage('Helm Deploy Jenkins') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM_APP }
                }
            }
            steps {
                script {

                    env.elb_public_id = readFile("${WORKSPACE}/elb_public_id.txt").trim()
                    env.elb_public_ip = readFile("${WORKSPACE}/elb_public_ip.txt").trim()
                    env.sfs_jenkins_id = readFile("${WORKSPACE}/sfs_jenkins_id.txt").trim()
                    env.sfs_turbo_shared_path = readFile("${WORKSPACE}/sfs_turbo_shared_path.txt").trim()
                    env.enterprise_project_id = readFile("${WORKSPACE}/enterprise_project_id.txt").trim()

                    helmDeployJenkins(
                        dir: env.HELM_DIR,
                        chartDir: 'jenkins-base',
                        kubeconfigCred: 'cce-jenkins-kubeconfig',
                        elbId: env.elb_public_id,
                        elbIp: env.elb_public_ip,
                        sfsId: env.sfs_jenkins_id,
                        sfs_turbo_shared_path: env.sfs_turbo_shared_path,
                        enterpriseProjectId: env.enterprise_project_id,
                        releaseName: 'jenkins',
                        namespace: 'jenkins',
                        healthEndpoint: '/login',
                        timeoutSeconds: 300
                    )
                }
            }
        }


    }

    post {
        success {
            echo "Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "Error en el pipeline"
        }
    }
}
