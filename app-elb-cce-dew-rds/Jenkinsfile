pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acción sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform'
        )
        booleanParam(
            name: 'RUN_ANSIBLE',
            defaultValue: false,
            description: 'Restaurar base de datos con Ansible'
        )
        booleanParam(
            name: 'RUN_HELM',
            defaultValue: false,
            description: 'Desplegar la aplicación con Helm'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR   = 'app-elb-cce-dew-rds/terraform'
        HELM_DIR = 'app-elb-cce-dew-rds/helm'
        ANS_DIR  = 'app-elb-cce-dew-rds/ansible'
        DUMP_DB  = 'obs://obs-alejandro-db-dumps/pg-cliente-dump.sql'
        REGION   = 'la-south-2'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            when {
                expression { params.RUN_TERRAFORM }
            }
            steps {
                ansiColor('xterm') {
                    dir(env.TF_DIR) {
                        sh '''
                        rm -rf .terraform
                        terraform init
                        '''
                    }
                }
            }
        }

        stage('Terraform Plan') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                ansiColor('xterm') {
                    dir(env.TF_DIR) {
                        sh 'terraform plan -var-file="local.tfvars"'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                ansiColor('xterm') {
                    dir(env.TF_DIR) {
                        script {
                            sh 'terraform apply -auto-approve -var-file="local.tfvars"'

                            env.cluster_id = sh(
                                script: 'terraform output -raw cluster_id',
                                returnStdout: true
                            ).trim()
                            env.rds_public_ip = sh(
                                script: 'terraform output -raw rds_public_ip',
                                returnStdout: true
                            ).trim()
                            env.db_password = sh(
                                script: 'terraform output -raw rds_postgres_password',
                                returnStdout: true
                            ).trim()
                        }

                        writeFile file: "${WORKSPACE}/cluster_id.txt", text: env.cluster_id
                        writeFile file: "${WORKSPACE}/rds_public_ip.txt", text: env.rds_public_ip
                        writeFile file: "${WORKSPACE}/db_password.txt", text: env.db_password
                        writeFile file: "${WORKSPACE}/elb_public_id.txt", text: env.elb_public_id
                    }
                }
            }
        }

        stage('Restore Database (Ansible)') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_ANSIBLE }
                }
            }
            steps {
                script {
                    env.rds_public_ip = readFile("${WORKSPACE}/rds_public_ip.txt").trim()
                    env.db_password   = readFile("${WORKSPACE}/db_password.txt").trim()
                }

                withCredentials([
                    string(credentialsId: 'hwc-access-key', variable: 'OBS_ACCESS_KEY'),
                    string(credentialsId: 'hwc-secret-key', variable: 'OBS_SECRET_KEY')
                ]) {
                    ansiColor('xterm') {
                        dir(env.ANS_DIR) {
                            sh '''
                            set -eo pipefail
                            export HOME=$(mktemp -d)

                            obsutil config \
                              -i "$OBS_ACCESS_KEY" \
                              -k "$OBS_SECRET_KEY" \
                              -e obs.$REGION.myhuaweicloud.com

                            obsutil cp "$DUMP_DB" db_dump.sql -f

                            ansible-playbook -i inventory/hosts playbooks/restore-db.yml \
                              --extra-vars "db_dump_file=db_dump.sql db_host=$rds_public_ip db_password=$db_password"
                            '''
                        }
                    }
                }
            }
        }

        stage('Helm Deploy App') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                ansiColor('xterm') {
                    script {
                        env.elb_public_id = readFile("${WORKSPACE}/elb_public_id.txt").trim()
                    }

                    dir(env.HELM_DIR) {
                        withCredentials([file(credentialsId: 'cce-kubeconfig', variable: 'KUBECONFIG')]) {
                            sh '''
                            export KUBECONFIG=$KUBECONFIG
                            kubectl get nodes

                            helm upgrade --install app-basic-java ./java-app \
                            -n app-basic \
                            --create-namespace \
                            --wait \
                            --set elb.id=${elb_public_id}
                            '''
                        }
                    }
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                allOf {
                    expression { params.ACTION == 'destroy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                ansiColor('xterm') {
                    dir(env.TF_DIR) {
                        sh 'terraform destroy -auto-approve -var-file="local.tfvars"'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "Error en el pipeline"
        }
    }
}
