pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acción sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM',
            defaultValue: true,
            description: 'Ejecutar Terraform'
        )
        booleanParam(
            name: 'RUN_ANSIBLE',
            defaultValue: false,
            description: 'Ejecutar Ansible'
        )
        booleanParam(
            name: 'RUN_HELM',
            defaultValue: false,
            description: 'Ejecutar Helm'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR   = 'app-elb-cce-dew-rds/terraform'
        HELM_DIR = 'app-elb-cce-dew-rds/helm/postgresql'
        ANS_DIR  = 'app-elb-cce-dew-rds/ansible'
        DUMP_DB  = 'obs://obs-alejandro-db-dumps/pg-cliente-dump.sql'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            when {
                allOf {
                    expression { params.RUN_TERRAFORM }
                    expression { params.ACTION in ['deploy', 'destroy'] }
                }
            }
            steps {
                dir(env.TF_DIR) {
                sh '''
                    rm -rf .terraform
                    terraform init
                '''
                }
            }
        }

        stage('Terraform Plan') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform plan -var-file="local.tfvars"'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    script {
                        sh 'terraform apply -auto-approve -var-file="local.tfvars"'

                        env.cluster_id = sh(
                            script: 'terraform output -raw cluster_id',
                            returnStdout: true
                        ).trim()
                        env.cluster_id = sh(
                            script: 'terraform output -raw cluster_id',
                            returnStdout: true
                        ).trim()
                        env.rds_public_ip = sh(
                            script: 'terraform output -raw rds_public_ip',
                            returnStdout: true
                        ).trim()
                        env.db_password = sh(
                            script: 'terraform output -raw db_password',
                            returnStdout: true
                        ).trim()
                    }
                }
            }
        }

        stage('Restore Database (Ansible)') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_ANSIBLE }
                }
            }
            steps {
                dir(env.ANS_DIR) {
                    sh '''
                    echo "Starting DB restore"
                    echo "Target DB host: ${env.rds_public_ip}"

                    # Descargar dump desde OBS
                    obsutil cp \
                        ${env.DUMP_DB} \
                        ./db_dump.sql \
                        -f

                    # Ejecutar restore con Ansible
                    ansible-playbook \
                        -i inventory/hosts \
                        playbooks/restore-db.yml \
                        --extra-vars "db_host=${env.rds_public_ip} db_dump_path=$(env.db_password)/db_dump.sql"
                    '''
                }
            }
        }

        stage('Get kubeconfig') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                dir(env.HELM_DIR) {
                    sh '''
                    echo "Generating kubeconfig for CCE cluster: ${env.cluster_id}"

                    huaweicloud cce cluster get-kubeconfig \
                        --cluster-id ${env.cluster_id} \
                        --file kubeconfig.yaml

                    chmod 600 kubeconfig.yaml
                    '''
                }
            }
        }

        stage('Helm Deploy App') {
            when {
                allOf {
                    expression { params.ACTION == 'deploy' }
                    expression { params.RUN_HELM }
                }
            }
            steps {
                dir(env.HELM_DIR) {
                    sh '''
                      helm upgrade --install app-basic-java helm/java-app  \
                        -n app-basic --create-namespace \
                        --wait
                    '''
                }
            }
        }

        stage('Terraform Destroy') {
            when {
                allOf {
                    expression { params.ACTION == 'destroy' }
                    expression { params.RUN_TERRAFORM }
                }
            }
            steps {
                dir(env.TF_DIR) {
                    sh 'terraform destroy -auto-approve -var-file="local.tfvars"'
                }
            }
        }
    }

    post {
        success {
            echo "✔ Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "❌ Error en el pipeline"
        }
        always {
            deleteDir()
        }
    }
}
