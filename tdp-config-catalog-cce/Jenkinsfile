@Library('shared-lib') _

pipeline {
    agent any

    options {
        disableConcurrentBuilds()
    }

    parameters {
        choice(
            name: 'ACTION',
            choices: ['deploy', 'destroy'],
            description: 'Acci√≥n sobre el ambiente'
        )
        booleanParam(
            name: 'RUN_TERRAFORM_BASE',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform Base'
        )
        booleanParam(
            name: 'RUN_TERRAFORM_NODE_IDENTITY',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform Node Identity'
        )
        booleanParam(
            name: 'RUN_TERRAFORM_WORKLOAD_IDENTITY',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform Workload Identity'
        )
        booleanParam(
            name: 'RUN_TERRAFORM_SECRETS_STORE',
            defaultValue: false,
            description: 'Construir infraestructura con Terraform Secrets Store'
        )
        booleanParam(
            name: 'RUN_HELM_SECRETS_STORE',
            defaultValue: false,
            description: 'Desplegar Jenkins con Helm (cargar kubeconfig en secreto)'
        )
        booleanParam(
            name: 'CLEAN_WORKSPACE',
            defaultValue: false,
            description: 'Limpiar workspace'
        )
    }

    environment {
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
        TF_DIR_BASE = 'tdp-config-catalog-cce/terraform/base'
        TF_DIR_NI   = 'tdp-config-catalog-cce/terraform/node-identity'
        TF_DIR_WK   = 'tdp-config-catalog-cce/terraform/workload-identity'
        TF_DIR_ST   = 'tdp-config-catalog-cce/terraform/secrets-store'
        HELM_DIR_ST = 'tdp-config-catalog-cce/helm/busybox/secrets-store'
        REGION      = 'la-south-2'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // -----------------------------
        // Terraform: infraestructura base
        // -----------------------------
        stage('Terraform Deploy Base') {
            when {
                expression { params.RUN_TERRAFORM_BASE }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR_BASE,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: [
                            'elb_public_ip', 
                            'elb_public_id'
                        ]
                    )
                }
            }
        }

        // -----------------------------
        // Terraform: infraestructura Node Identity
        // -----------------------------
        stage('Terraform Deploy Node Identity') {
            when {
                expression { params.RUN_TERRAFORM_NODE_IDENTITY }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR_NI,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: []
                    )
                }
            }
        }

        // -----------------------------
        // Terraform: infraestructura Workload Identity
        // -----------------------------
        stage('Terraform Deploy Workload Identity') {
            when {
                expression { params.RUN_TERRAFORM_WORKLOAD_IDENTITY }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR_WK,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: []
                    )
                }
            }
        }

        // -----------------------------
        // Terraform: infraestructura Secrets Store
        // -----------------------------
        stage('Terraform Deploy Secrets Store') {
            when {
                expression { params.RUN_TERRAFORM_SECRETS_STORE }
            }
            steps {
                script {
                    terraformDeploy(
                        dir: env.TF_DIR_ST,
                        varsFile: 'local.tfvars',
                        action: params.ACTION,
                        outputs: []
                    )
                }
            }
        }

        // -----------------------------
        // Helm desplegar las aplicaciones para Secrets Store
        // -----------------------------
        stage('Deploy Demo App con Secrets Store') {

            when {
                expression { params.RUN_HELM_SECRETS_STORE }
            }

            environment {
                NAMESPACE = "secrets-store"
                RELEASE_NAME = "secrets-store"
                TIMEOUT_SECONDS = "300"
            }

            steps {
                script {
                    // Lectura de archivos generados en stages previos
                    env.elb_public_id = readFile("${WORKSPACE}/elb_public_id.txt").trim()
                    env.elb_public_ip = readFile("${WORKSPACE}/elb_public_ip.txt").trim()
                }
                // Leer archivo de credentiales CSV
                dir(env.TF_DIR_ST) {
                    script {
                        def content = readFile(file: 'credentials-cce-programmatic-user.csv')
                        def lines = content.split('\n')
                        def values = lines[1].split(',')

                        env.HW_USER_ID = values[0].trim()
                        env.HW_AK = values[1].trim()
                        env.HW_SK = values[2].trim()

                        echo "Access Key cargado correctamente"
                    }
                }

                dir(env.HELM_DIR_ST) {

                    withCredentials([
                        file(credentialsId: 'cce-app-kubeconfig', variable: 'KUBECONFIG')
                        //file(credentialsId: 'sops-gpg-key', variable: 'GPG_KEY_FILE')
                    ]) {

                        sh '''
                        set -eo pipefail

                        export KUBECONFIG=$KUBECONFIG

                        echo ""
                        echo "=========================================="
                        echo "Validando acceso al cluster CCE..."
                        echo "=========================================="

                        kubectl get nodes

                        echo ""
                        echo "=========================================="
                        echo "Desplegando Helm Release: ${RELEASE_NAME}"
                        echo "Namespace: ${NAMESPACE}"
                        echo "Chart Dir: demo-app"
                        echo "=========================================="

                        helm upgrade --install ${RELEASE_NAME} . \
                        -n ${NAMESPACE} \
                        --create-namespace \
                        --wait \
                        --timeout ${TIMEOUT_SECONDS}s \
                        --set elb.id=${elb_public_id} \
                        --set access_key=${HW_AK} \
                        --set secret_key=${HW_SK}

                        '''
                    }
                }
            }
        }

        // -----------------------------
        // Clean Workspace
        // -----------------------------
        stage('Clean Workspace') {
            when {
                expression { params.CLEAN_WORKSPACE }
            }
            steps {
                deleteDir()
            }
        }
    }

    post {
        success {
            echo "Pipeline ejecutado correctamente (${params.ACTION})"
        }
        failure {
            echo "Error en el pipeline"
        }
    }
}
