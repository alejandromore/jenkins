pipeline {
    agent any

    parameters {
        string(
            name: 'PROJECT_NAME',
            defaultValue: 'basic-project',
            description: 'Nombre del proyecto para generar la llave SSH'
        )
    }

    environment {
        TF_DIR = 'key-management/create-keys'
        TF_VAR_access_key = credentials('hwc-access-key')
        TF_VAR_secret_key = credentials('hwc-secret-key')
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Todos los stages de Terraform ejecutándose dentro de TF_DIR
        stage('Terraform Steps') {
            steps {
                dir("${env.TF_DIR}") {
                    stage('Init Terraform') {
                        sh 'terraform init'
                    }

                    stage('Generar SSH Key') {
                        sh """
                            terraform apply -auto-approve -var="project_name=${params.PROJECT_NAME}"
                        """
                    }

                    stage('Mostrar identificador de KeyPair') {
                        sh 'terraform output keypair_name'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completado correctamente. La llave está creada y el identificador mostrado."
        }
        failure {
            echo "Error en el pipeline"
        }
    }
}
